<resources>
    <!-- Base application theme. -->
    <style name="Theme.SimplifyDebt" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/cu_gold</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/cu_grey</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="SplashTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/colorado_buffaloes_wordmark</item>
        <item name="colorPrimary">@color/cu_gold</item>
        <item name="colorPrimaryDark">@color/cu_gold</item>
        <item name="colorAccent">@color/cu_grey</item>
        <item name="android:statusBarColor">@color/cu_gold</item>
    </style>
</resources>